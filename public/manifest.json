{
  "manifest_version": 2,
  "name": "Web notes",
  "version": "0.0.1",
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["build/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["build/injection.js"]
    }
  ]
}